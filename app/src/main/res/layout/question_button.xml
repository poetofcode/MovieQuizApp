<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="variant"
            type="ru.poetofcode.whatahorror.presentation.VariantInfo" />

        <variable
            name="handler"
            type="ru.poetofcode.whatahorror.presentation.VariantButtonHandler" />
    </data>
    
    <merge>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@{variant.name}"
            app:backgroundResource="@{variant.color}"
            android:onClick="@{() -> handler.onClick(variant.name)}"
            app:layout_flexBasisPercent="50%" />
    </merge>

</layout>
